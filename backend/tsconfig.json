{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "js",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "diagnostics": true,
    "disableSizeLimit": true,
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules/*",
    "config"
  ]
}